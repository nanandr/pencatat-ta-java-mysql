<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:background="@drawable/form"
        android:paddingHorizontal="16sp"
        android:paddingVertical="8sp"
        android:elevation="2sp"
        android:layout_marginBottom="8sp"
        android:layout_marginTop="8sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5sp">
            <TextView
                android:id="@+id/nama_pemilik"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Nama Pemilik"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tahun Cetak "/>
            <TextView
                android:id="@+id/tahun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"/>
        </LinearLayout>
        <TextView
            android:id="@+id/no_induk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="210912210"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="5sp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/primary"
            android:layout_marginBottom="5sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pembimbing: "/>
            <TextView
                android:id="@+id/nama_pembimbing"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Nama Pembimbing"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tempat_pkl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tempat PKL"
            android:layout_marginBottom="5sp"/>
        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul TA"/>
        <TextView
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="id"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>